<%= render partial: 'users/user', locals: {user: @user}%>
<h4>Posts</h4>

<% @posts.each do |post| %>
  <%= render partial: 'users/post', locals: { post: post, user: @user }%>
  <% comments = post.comments.includes(:user).order(created_at: :desc).limit(5) %>
  <%= render partial: 'comments', locals: {comments: comments}%>
<% end %>
